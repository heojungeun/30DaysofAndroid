<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/bartext"
            android:text="underML"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/neodgm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/addbtn"
            android:text="add"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/neodgm"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/mlimgview"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/textGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar" />

    <LinearLayout
        android:id="@+id/textGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mlimgview"
        android:background="@drawable/whiteborder"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/imgcnt"
            android:text="* This is photo"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/neodgm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mlbtnGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGroup">

        <Button
            android:id="@+id/mltextbtn"
            android:text="text"
            android:textColor="@color/colorOrange"
            android:fontFamily="@font/neodgm"
            android:textSize="35sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/orangeborder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"/>

        <Button
            android:id="@+id/mlfacebtn"
            android:text="faces"
            android:textColor="@color/colorOrange"
            android:fontFamily="@font/neodgm"
            android:textSize="35sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/orangeborder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/mllabelbtn"
            android:text="label"
            android:textColor="@color/colorOrange"
            android:fontFamily="@font/neodgm"
            android:textSize="35sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/orangeborder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>