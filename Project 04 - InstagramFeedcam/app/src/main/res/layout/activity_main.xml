<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_border"
        android:paddingHorizontal="15dp"
        android:paddingBottom="5dp">
        
        <ImageButton
            android:id="@+id/camerabtn"
            android:background="@drawable/instagramcamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"/>

        <TextView
            android:text="stagram"
            android:textSize="37sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/billabong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageButton
            android:background="@drawable/instagramdirect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:text="heo_offical"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:src="@drawable/instagramset"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>

            <ImageView
                android:src="@drawable/photo1"
                android:layout_width="match_parent"
                android:layout_height="411dp"
                android:background="#f7f7f7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/instagramheart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/instagramchat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/instagramdirect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <ImageView
                    android:src="@drawable/instagramsave"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>

            <TextView
                android:text="좋아요 20개"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="2020년 1월 14일"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/photo3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:text="abcd_efg_hijk"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:src="@drawable/instagramset"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>

            <ImageView
                android:src="@drawable/photo2"
                android:layout_width="match_parent"
                android:layout_height="411dp"
                android:background="#f7f7f7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/instagramheart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/instagramchat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/instagramdirect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <ImageView
                    android:src="@drawable/instagramsave"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"/>

            </FrameLayout>

            <TextView
                android:text="좋아요 15개"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="2019년 11월 13일"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:padding="10dp">

        <ImageView
            android:src="@drawable/ic_home_black_24dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <ImageView
            android:src="@drawable/instagramsearch"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <ImageView
            android:src="@drawable/instagramaddwhite"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <ImageView
            android:src="@drawable/instagramheart"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <ImageView
            android:src="@drawable/instagramuser"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>